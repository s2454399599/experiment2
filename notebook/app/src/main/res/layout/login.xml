<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#40E0D0">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_author"
        android:textSize="48sp"
        />
    <LinearLayout
        android:id="@+id/edit_title_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请输入作者姓名："
            android:textSize="48sp"
            />
        <EditText
            android:id="@+id/login_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="36sp"
            android:text="@string/text_author_default"
            />

    </LinearLayout>
    <Button
        android:id="@+id/btn_login"
        android:layout_toRightOf="@id/btn_edit_menu"
        android:layout_toEndOf="@id/btn_edit_menu"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF8C00"
        android:text="进入记事本"
        android:textSize="48sp"
        />



</LinearLayout>